<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <com.example.yura.navigationdrawer.watch.WatchFace
        android:id="@+id/watch_id"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <com.example.yura.navigationdrawer.watch.WatchHands
    android:id="@+id/arrow"
    android:layout_width="300dp"
    android:layout_height="300dp"/>

    <Button
        android:id="@+id/fg_continue"
        android:text="Continue"
        android:layout_centerInParent="true"
        android:layout_alignBottom="@id/watch_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.example.yura.navigationdrawer.watch.Watch
        android:id="@+id/watch"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@color/ColorGrey"/>

    <TextView
        android:id="@+id/time_to_cook"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</RelativeLayout>
